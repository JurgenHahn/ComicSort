<p id="notice"><%= notice %></p>

<h1>Stories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= link_to 'Show', comic_story_path(@comic, story) %></td>
        <td><%= link_to 'Edit', edit_comic_story_path(@comic,story) %></td>
        <td><%= link_to 'Destroy', [@comic, story], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_comic_story_path(@comic) %>
