<!--div used with an ajax request to create a show modal -->
<div class="comic-details-background">
    <div class="comic-details"></div>
</div>

<div class="container">
    <% @comics.each do |comic| %>
        <div class="col-xs-3">
            <!-- displays transparent thumb-nail unless comic is owned -->
            <div class="thumb-nail <% unless comic.owned %> unowned <% end %> ">
                <div><%= link_to image_tag("#{comic.cover}", :class => "img-responsive"), comic_path(comic) %></div>
                <div>Vol.<%= comic.volume %> #<%= number_with_precision(comic.issue, strip_insignificant_zeros: true) %></div>
            </div>
        </div>
    <% end %>
</div>
