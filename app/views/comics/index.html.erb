<p id="notice"><%= notice %></p>

<!-- Notice to user if search returns no results -->
<% if @comics.blank? %>
  <h4>There are no comics containing the term <%= params[:search] %>.</h4>
<% end %>

<h1 id="volume-title">The Amazing Spider-Man Volume <%= params["volume"] %></h1>

<%= render 'stats' %>

<!--invisible div used with an ajax request to create a show modal -->
<div class="comic-details-background">
  <div class="comic-details"></div>
</div>

<div class="container">
    <div class="row">
      <% @comics.each do |comic| %>
        <div class="col-xs-3">
          <!-- displays transparent thumb-nail if owned == false -->
          <div class="thumb-nail <% if comic.owned == false %> unowned"> <% else %> "> <% end %>
            <div><%= link_to image_tag("#{comic.cover}", size: "232x352", :class => "img-responsive"), comic_path(comic, {:issue => comic.issue, :volume => comic.volume}) %></div>
            <div>Vol.<%= comic.volume %> #<%= number_with_precision(comic.issue, strip_insignificant_zeros: true) %></div>

          </div>
        </div>
      <% end %>
    </div>
</div>
