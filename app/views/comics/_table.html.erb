<table class="table table-striped table-bordered  table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Volume</th>
      <th>Issue</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.title %></td>
        <td><%= comic.volume %></td>
        <td><%= comic.issue %></td>
        <td>$<%= comic.price %></td>
        <td><%= link_to 'Show', comic, :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_comic_path(comic), :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

