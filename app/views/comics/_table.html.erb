<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Volume</th>
      <th>Issue</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.volume %></td>
        <td><%= number_with_precision(comic.issue, strip_insignificant_zeros: true)%></td>
        <td>$<%= comic.price %></td>
        <td><%= link_to 'Show', comic_path(comic), :class => "btn btn-default btn-xs" %></td>
    <% end %>
  </tbody>
</table>

<br>
