<%= form_for(comic) do |f| %>
  <% if comic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comic.errors.count, "error") %> prohibited this comic from being saved:</h2>

      <ul>
      <% comic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :volume, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :volume %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :issue, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :issue %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :price, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :price %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :cover, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cover %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :cover_artist, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cover_artist %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :writer, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :writer %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :penciler, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :penciler %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :inker, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :inker %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :colorist, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :colorist %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :letterer, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :letterer %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :editor, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :editor %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :editor_in_chief, "Editor-in-chief", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :editor_in_chief %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :tags, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :tags %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :owned, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <div class="checkbox">
        <%= f.check_box :owned %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <%= f.submit %>
  </div>
<% end %>
