<%= form_for(comic)  do |f| %>
  <% if comic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comic.errors.count, "error") %> prohibited this comic from being saved:</h2>

      <ul>
      <% comic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :volume, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :volume %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :issue, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :issue %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :cover_price, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :cover_price, :step => 0.01 %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :price, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :price %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :cover, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cover %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :cover_artists, "Cover Artists", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cover_artists %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :tags, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :tags %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :annual, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <div class="checkbox">
        <%= f.check_box :annual %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :owned, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <div class="checkbox">
        <%= f.check_box :owned %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <%= f.submit %>
  </div>
<% end %>
