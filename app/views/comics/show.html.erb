<p id="notice"><%= notice %></p>
<div class="wrapper container">
  <div class="row">

      <div class="cover col-xs-6">
        <%= image_tag "#{@comic.cover}", size: "292x443" %>
      </div>
      <div class="credits col-xs-6">
        <div class="issue">
          <strong>The Amazing Spider-Man</strong>
          <p>Volume <%= @comic.volume %> Issue <%= @comic.issue %></p>
        </div>

        <p>
          <strong>Cover Artists:</strong>
          <%= @comic.cover_artist %>
        </p>
        <p>
          <strong>Writers:</strong>
          <%= @comic.writer %>
        </p>

        <p>
          <strong>Pencilers:</strong>
          <%= @comic.penciler %>
        </p>

        <p>
          <strong>Inkers:</strong>
          <%= @comic.inker %>
        </p>

        <p>
          <strong>Colourists:</strong>
          <%= @comic.colorist %>
        </p>

        <p>
          <strong>Letterers:</strong>
          <%= @comic.letterer %>
        </p>

        <p>
          <strong>Editors:</strong>
          <%= @comic.editor %>
        </p>

        <p>
          <strong>Editor-in-Chief:</strong>
          <%= @comic.editor_in_chief %>
        </p>
        <p>
          <strong>Tags:</strong>
          <%= @comic.tags %>
        </p>
        <p>
          <%= link_to 'Back', comics_path({:volume => @comic.volume}) %> |
          <%= link_to 'Edit', edit_comic_path(@comic) %> |
          <%= link_to 'Destroy', @comic, method: :delete, data: {confirm: 'Are you sure?'} %>
        </p>
      </div>


  </div>
</div>
